<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-md-8 offset-md-2 ">
                <h3>Create a New Listing</h3>
                <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" class="form-control" placeholder="Add a catchy Title" required>
                        <div class="invalid-feedback">Title is required</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" name="listing[description]" class="form-control" placeholder="Tell about hotel and services." required></textarea>
                        <div class="invalid-feedback">Description is required</div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" class="form-control" placeholder="Tehsil Choraha, Khilchipur, Madhya Pradesh" required>
                        <div class="invalid-feedback">Please Enter Location!</div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="price" class="form-label">Price</label>
                            <input  name="listing[price]" class="form-control" placeholder="1200" required>
                            <div class="invalid-feedback">Enter a valid Price!</div>
                        </div>
                        <br>
                        <br>
                        <!-- <br>
                        <br>
                        <br> -->
                        <div class="col-md-8 mb-3">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" class="form-control" placeholder="India" required>
                            <div class="invalid-feedback">Enter a Country Name</div>
                        </div>
                    </div>
                    <!-- <div class="mb-3">
                        <label for="image" class="form-label">Image Link</label>
                        <input type="text" name="listing[image]" class="form-control" placeholder="Enter a publicly accessable Image Link (Optional)">
                        <div class="invalid-feedback">Enter a accessable Image link</div>
                    </div> -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Image Link</label>
                        <input type="file" name="listing[image]" class="form-control" placeholder="Enter a publicly accessable Image Link (Optional)">
                        <div class="invalid-feedback">Enter a accessable Image link</div>
                    </div>
                    <br>
                    <div class="mb-3">
                        <button class="btn btn-dark add-btn mb-4" style="width: 100%;">Add</button>
                    </div>

                </form>
            </div>
        </div>
    </body>