<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-md-8 offset-md-2 ">
                <h3>Create a New Listing</h3>
                <form method="POST" action="/listings">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" class="form-control" placeholder="Add a catchy Title">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" name="listing[description]" class="form-control" placeholder="Tell about hotel and services."></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" class="form-control" placeholder="Tehsil Choraha, Khilchipur, Madhya Pradesh">
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="listing[price]" class="form-control" placeholder="1200">
                        </div>
                        <br>
                        <br>
                        <!-- <br>
                        <br>
                        <br> -->
                        <div class="col-md-8 mb-3">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" class="form-control" placeholder="India">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image Link</label>
                        <input type="text" name="listing[image]" class="form-control" placeholder="Enter a publicly accessable Image Link">
                    </div>
                    <br>
                    <div class="mb-3">
                        <button class="btn btn-dark add-btn mb-4" style="width: 100%;">Add</button>
                    </div>

                </form>
            </div>
        </div>
    </body>